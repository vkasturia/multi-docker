{
    "AWSEBDockerrunVersion": 2, 
    "containerDefinitions": [
        {
            "name": "client",
            "image": "vbhvkas18/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "vbhvkas18/multi-server",
            "hostname": "api",
            "essential": false
        }, 
        {
            "name": "worker",
            "image": "vbhvkas18/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "vbhvkas18/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort" : 80
                }    
            ],
            "links" : ["client", "server"]
        }
    ] 
}